  <style>
    #hero {
      @apply pb-6 pt-8;
    }
    #hero h1 {
      @apply my-4 inline-block text-3xl font-bold sm:my-8 sm:text-5xl;
    }
    #hero .rss-link {
      @apply mb-6;
    }
    #hero .rss-icon {
      @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
    }
    #hero p {
      @apply my-4;
    }

    #shake {
      animation: tilt-n-move-shaking-avata 1.5s infinite;
    }

    #shake-button:hover {
      animation: tilt-n-move-shaking 0.25s infinite;
    }

    #button-heading:focus {
      animation: horizontal-shaking 0.01s infinite;
    }

    #af {
      margin-bottom: -60px;
    }

    #af:hover {
      animation: horizontal-shaking 0.25s infinite;
    }

    @keyframes tilt-n-move-shaking-avata {
      0% {
        transform: translate(0, 0) rotate(0deg);
        filter: blur(0.1px);
      }
      25% {
        transform: translate(2px, 2px) rotate(2deg);
        filter: blur(0.25px);
      }
      50% {
        transform: translate(0, 0) rotate(0eg);
        filter: blur(0.5px);
      }
      75% {
        transform: translate(-2px, 2px) rotate(-2deg);
      }
      100% {
        transform: translate(0, 0) rotate(0deg);
        filter: blur(1px);
      }
    }

    @keyframes tilt-n-move-shaking {
      0% {
        transform: translate(0, 0) rotate(0deg);
        filter: blur(0.1px);
      }
      25% {
        transform: translate(5px, 5px) rotate(5deg);
        filter: blur(0.25px);
      }
      50% {
        transform: translate(0, 0) rotate(0eg);
        filter: blur(0.5px);
      }
      75% {
        transform: translate(-5px, 5px) rotate(-5deg);
      }
      100% {
        transform: translate(0, 0) rotate(0deg);
        filter: blur(1px);
      }
    }

    @keyframes horizontal-shaking {
      0% {
        transform: translateX(0);
        filter: blur(1px);
      }
      25% {
        transform: translateX(10px);
        filter: blur(2px);
      }
      50% {
        transform: translateX(-10px);
        filter: blur(3px);
      }
      75% {
        transform: translateX(10px);
        filter: blur(4px);
      }
      100% {
        transform: translateX(0);
        filter: blur(5px);
      }
    }

    @keyframes horizontal-shaking {
      0% {
        transform: translateX(0);
        filter: blur(1px);
      }
      25% {
        transform: translateX(1px);
        filter: blur(2px);
      }
      50% {
        transform: translateX(-1px);
        filter: blur(3px);
      }
      75% {
        transform: translateX(1px);
        filter: blur(4px);
      }
      100% {
        transform: translateX(0);
        filter: blur(5px);
      }
    }
  </style>
